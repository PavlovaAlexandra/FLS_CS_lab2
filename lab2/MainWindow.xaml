<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <TextBox x:Name="pageNumber" HorizontalAlignment="Left" Margin="743,382,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="32" KeyDown="pageNumber_KeyDown"/>
            <Label Content="Номер страницы:" HorizontalAlignment="Left" Height="29" Margin="599,376,0,0" VerticalAlignment="Top" Width="128"/>
        </Grid>
        <Button Content="Update" HorizontalAlignment="Left" Height="32" Margin="594,39,0,0" VerticalAlignment="Top" Width="186" Foreground="White" FontSize="20" FontFamily="Times New Roman" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF1B24A7" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid x:Name="threatsElement" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,39,232,31"/>

    </Grid>
</Window>
